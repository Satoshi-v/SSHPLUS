keyboard2=$(ShellBot.InlineKeyboardButton -button 'ğŸ“‹ LISTAR USUARIOS' -callback_data 'listar_users' -new_row)
keyboard2=$(ShellBot.InlineKeyboardButton -button 'ğŸ“¤ HOSPEDAR ARQUIVO' -callback_data 'hospedar_arquivo')
