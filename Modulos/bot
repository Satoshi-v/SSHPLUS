keyboard1=$(ShellBot.InlineKeyboardButton -button 'âš ï¸ SUSPENDER REVENDEDOR' -callback_data 'suspender_revenda')
keyboard1=$(ShellBot.InlineKeyboardButton -button 'âœ… ATIVAR REVENDEDOR' -callback_data 'ativar_revenda' -new_row)
keyboard1=$(ShellBot.InlineKeyboardButton -button 'ğŸ’¾ RESTAURAR BACKUP' -callback_data 'restaurar_bkp')

keyboard2=$(ShellBot.InlineKeyboardButton -button 'ğŸ‘¤ CREAR USUARIO' -callback_data 'criar_user')
keyboard2=$(ShellBot.InlineKeyboardButton -button 'ğŸ—‘ REMOVER USUARIO' -callback_data 'remover_user' -new_row)
