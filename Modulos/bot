                    }
                    [[ "${message_text[$id]}" = @(Si|si|SI) ]] && {
                        msg_cli="â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ "
                        msg_cli+="<b>ARCHIVOS PRE-CONFIGURADOS </b>â—"
                        msg_cli+="â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ â‰ "
                        i=0
